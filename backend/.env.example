# AI Privacy Guard Backend Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Upload settings
MAX_FILE_SIZE_MB=10
MAX_BATCH_SIZE=10

# Rate limiting
RATE_LIMIT_PER_DAY=5

# Redis settings (optional - for ephemeral storage)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL_SECONDS=300

# AI Model settings
YOLO_MODEL=yolov8n.pt
PLATE_YOLO_MODEL=yolov8n-license-plate.pt
FACE_DETECTION_CONFIDENCE=0.5
PLATE_DETECTION_CONFIDENCE=0.5

# Default blur settings
DEFAULT_BLUR_INTENSITY=80
